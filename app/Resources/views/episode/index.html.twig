{% extends 'base.html.twig' %}

{% block title %}{{ episode.name }}{% endblock %}

{% block body %}
    <div class="video">
        <img class="video__elem" src="{{ asset('img/source.gif') }}?rand={{ number }}" />
    </div>

    <main class="main-content" id="main-content">
        <section class="main-content__section">
            <a href="/" title="Back to home" class="main-content__section__back">
                <img src="{{ asset('img/home.png') }}" alt="Homepage" />
            </a>

            <h1 class="main-content__title main-content__title--padding">{{ episode.name }}</h1>

            <img src="{{ episode.image }}" alt="{{ episode.name }}" class="main-content__img" />

            <div class="main-content__infos">
                <p>{{ episode.summary }}</p>
                <br />

                <p>Season {{ episode.season }} episode {{ episode.number }}</p>
                <p>Air date : {{ episode.airdate }}</p>
                <br />
                
                <p>
                    <a href="{{ episode.url }}" title="{{ episode.name }}" target="_blank">Watch on TVMaze</a>
                </p>
            </div>
        </section>
    </main>
{% endblock %}
